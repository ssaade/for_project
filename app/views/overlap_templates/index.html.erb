<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All overlaps
    </h1>

    <a href="/overlaps/new" class="btn btn-block btn-outline-secondary">
      Add a new overlap
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Inviter
        </th>

        <th>
          Invited
        </th>

        <th>
          Date
        </th>

        <th>
          Start time
        </th>

        <th>
          End time
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @overlaps.each do |overlap| %>
      <tr>
        <!-- Display overlap.id start -->
        <td>
          <%= overlap.id %>
        </td>
        <!-- Display overlap.id end -->

        <!-- Display overlap.inviter_id start -->
        <td>
          <%= overlap.firstuser.email %>
        </td>
        <!-- Display overlap.inviter_id end -->

        <!-- Display overlap.invited_id start -->
        <td>
          <%= overlap.seconduser.email %>
        </td>
        <!-- Display overlap.invited_id end -->

        <!-- Display overlap.date start -->
        <td>
          <%= overlap.date %>
        </td>
        <!-- Display overlap.date end -->

        <!-- Display overlap.start_time start -->
        <td>
          <%= overlap.start_time %>
        </td>
        <!-- Display overlap.start_time end -->

        <!-- Display overlap.end_time start -->
        <td>
          <%= overlap.end_time %>
        </td>
        <!-- Display overlap.end_time end -->

        <!-- Display overlap.created_at start -->
        <td>
          <%= time_ago_in_words(overlap.created_at) %> ago
        </td>
        <!-- Display overlap.created_at end -->

        <!-- Display overlap.updated_at start -->
        <td>
          <%= time_ago_in_words(overlap.updated_at) %> ago
        </td>
        <!-- Display overlap.updated_at end -->

        <td>
          <a href="/overlaps/<%= overlap.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @overlaps, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
