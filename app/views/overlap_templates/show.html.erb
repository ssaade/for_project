<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Overlap #<%= @overlap.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/overlaps" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/overlaps/<%= @overlap.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit overlap
        </a>
      </div>

      <div class="col">
        <a href="/delete_overlap/<%= @overlap.id %>" class="btn btn-block btn-outline-secondary">
          Delete overlap
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Inviter
      </dt>
      <dd>
        <% if @overlap.firstuser.present? %>
          <a href="/users/<%= @overlap.inviter_id %>">
            <%= @overlap.firstuser.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Invited
      </dt>
      <dd>
        <% if @overlap.seconduser.present? %>
          <a href="/users/<%= @overlap.invited_id %>">
            <%= @overlap.seconduser.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Date
      </dt>
      <dd>
        <%= @overlap.date %>
      </dd>

      <dt>
        Start time
      </dt>
      <dd>
        <%= @overlap.start_time %>
      </dd>

      <dt>
        End time
      </dt>
      <dd>
        <%= @overlap.end_time %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@overlap.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@overlap.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

