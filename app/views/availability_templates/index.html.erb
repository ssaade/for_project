<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All availabilities
    </h1>

    <a href="/availabilities/new" class="btn btn-block btn-outline-secondary">
      Add a new availability
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Date
        </th>

        <th>
          Start time
        </th>

        <th>
          End time
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @availabilities.each do |availability| %>
      <tr>
        <!-- Display availability.id start -->
        <td>
          <%= availability.id %>
        </td>
        <!-- Display availability.id end -->

        <!-- Display availability.user_id start -->
        <td>
          <% if availability.user.present? %>
            <a href="/users/<%= availability.user.id %>">
              <%= availability.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display availability.user_id end -->

        <!-- Display availability.date start -->
        <td>
          <%= availability.date %>
        </td>
        <!-- Display availability.date end -->

        <!-- Display availability.start_time start -->
        <td>
          <%= availability.start_time %>
        </td>
        <!-- Display availability.start_time end -->

        <!-- Display availability.end_time start -->
        <td>
          <%= availability.end_time %>
        </td>
        <!-- Display availability.end_time end -->

        <!-- Display availability.created_at start -->
        <td>
          <%= time_ago_in_words(availability.created_at) %> ago
        </td>
        <!-- Display availability.created_at end -->

        <!-- Display availability.updated_at start -->
        <td>
          <%= time_ago_in_words(availability.updated_at) %> ago
        </td>
        <!-- Display availability.updated_at end -->

        <td>
          <a href="/availabilities/<%= availability.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @availabilities, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
